
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4 class="modal-title" id="myModalLabel">Ajouter evaluation</h4>
</div>
<div class="modal-body" style="height: 420px; overflow-y: auto;">
    {{ form_start(form,{ 'attr': {'class': 'smart-form ','action': path('evaluation_new'), 'method': 'POST'|trans }} ) }}




    <section >
        <label class="label">Formation</label>
        <label class="select">
            {{form_widget ( form.formation,{ 'attr': {'type': 'text','name':'username'|trans } } ) }}
            <i></i> </label>
    </section>


    <section class="col col-6">
        <label class="label">Nom et Prénom</label>
        <label class="input"> <i class="icon-append fa fa-user"></i>
