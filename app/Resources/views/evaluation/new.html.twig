                <input type="text" class="form-control" value="{{ app.user.getNom() }}&nbsp;{{ app.user.getPrenom() }}" name="nameemployee">
            </div>
        </label>
    </section>
    <div class="row">

        <section class="col col-4">
            <div class="rating" >

                {% for child in form.afroid %}
                    {% set a=child.vars.label %}

                    {{ form_widget(child, { 'id': a ,'attr': {'type':'radio'}}) }}
