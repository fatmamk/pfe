

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true"></i><span class="close"></span></button>
    <h2 class="modal-title" id="modal-fa5-label">Ajouter Absence </h2>
</div>

    <div class="modal-body">
    {{ form_start(form,{'attr':{'class':'smart-form','id':'checkout-form','action':path('absence_new'),'method':'POST'|trans}})}}
    <header>
        Absence
    </header>
        <fieldset>
            <div class="row">
                <section class="col col-6">
                <label class="label">liste des employees </label>

                    <label class="select">
                        {{ form_widget(form.employee) }}

                        <i></i>

                    </label>

                </section>
            </div>
        </fieldset>

        <fieldset>
            <div class="row">
                <section class="col col-6">
                    <label class="label">date Debut</label>

                    <label id="dob" class="input"> <i class="icon-append fa fa-calendar"></i>
                        {{ form_widget ( form.dateDebut,{ 'attr': { 'class':'startdate'|trans}}) }}
                        {{ form_errors(form.dateDebut)}}
                    </label>
                </section>
                <section class="col col-6">
                    <label class="label">date Fin</label>

                    <label id="dob" class="input"> <i class="icon-append fa fa-calendar"></i>
                        {{ form_widget ( form.dateFin,{ 'attr': { 'class':'finishdate'|trans}}) }}
                        {{ form_errors(form.dateFin)}}
                    </label>
                </section>
            </div>
        </fieldset>

    <fieldset>
        <div class="row">

                <div class="col col-6">
                    <label class="label">Justifier</label>
                             {% for child in form.justifier %}
                                     {% if child.vars.value == 0 %}
                                           <section class="col col-4">
                                               <label class="radio">
                                                {{ form_widget(child, { 'attr': {'type':'radio','checked':'checked'}}) }}
                                                  <i></i>{{ form_label(child) }}</label>
                                           </section>
                                     {% else %}
                                              <section  class="col col-4">
                                                 <label class="radio">
                                                  {{ form_widget(child, { 'attr': {'type':'radio'}}) }}
                                                    <i></i>{{ form_label(child) }}</label>
                                                   </section>
                                       {% endif %}
                            {% endfor %}

            </div>
<div class="file{{ absence.id }}" style="display: none">
        <section  class="col col-6" >
            <label class="label">fichier</label>
                {{ form_widget (form.file)}}
                {{ form_errors(form.file)}}

        </section>
</div>
</div>
    </fieldset>




</div>
<div class="modal-footer">

    <footer>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Annuler
        </button>
        <button type="submit" class="btn btn-primary">
            Enregister
        </button>


    </footer>
    {{ form_end(form,{'render_rest':false}) }}
</div>

