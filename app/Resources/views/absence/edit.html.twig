<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4 class="modal-title" id="myModalLabel">Modifier Absence</h4>
</div>
<div class="modal-body">
    {{ form_start(edit_form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('absence_edit',{'id':absence.id}),'method':'POST'|trans}})}}
    <header>
        Absence
    </header>


    <fieldset>
        <div class="row">
            <section class="col-sm-12 col-md-12 col-lg-12 ">
                <label class="label">justifier</label>
                <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                    {{ form_widget ( edit_form.justifier) }}
                    {{ form_errors(edit_form.justifier)}}</label>
            </section></div>
    </fieldset>



    <fieldset>
        <div class="row">
            <section class="col col-6">
                <label class="label">date Debut</label>

                <label id="dob" class="input"> <i class="icon-append fa fa-calendar"></i>
                    {{ form_widget ( edit_form.dateDebut,{ 'attr': { 'class':'startdate'|trans}}) }}
                    {{ form_errors(edit_form.dateDebut)}}
                </label>
            </section>
            <section class="col col-6">
                <label class="label">date Fin</label>
                <label id="dob" class="input"> <i class="icon-append fa fa-calendar"></i>
                    {{ form_widget ( edit_form.dateFin,{ 'attr': { 'class':'finishdate'|trans}}) }}
                    {{ form_errors(edit_form.dateFin)}}
                </label>
            </section>

        </div>
    </fieldset>



</div>
<div class="modal-footer">
    {{ form_widget(edit_form._token) }}

    <footer>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Annuler
        </button>
        <button type="submit" class="btn btn-primary">
            Modifier
        </button>


    </footer>
    {{ form_end(edit_form,{'render_rest':false}) }}
</div>


