<div class="modal-header" >
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true"></i><span class="close"></span></button>
    <h2 class="modal-title" id="modal-fa5-label"> Ajouter demande conge</h2>
</div>
<div class="modal-body">
    {{ form_start(form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('demandeconge_new'),'method':'POST'|trans}})}}

    <fieldset>
        <div class="row">

            <section class="col col-6">
                <label class="label">Date de demande </label>

                <label class="input"> <i class="icon-append fa fa-calendar"></i>
                    {{ form_widget(form.dateDebutConge,{'attr':{'class':'startdate'|trans}})}}
                    {{ form_errors(form.dateDebutConge)}}
                </label>
            </section>
            <section class="col col-6">
                <label class="label">Date Souhaite </label>

                <label class="input"> <i class="icon-append fa fa-calendar"></i>
                    {{ form_widget(form.dateFinConge,{'attr':{'class':'startdate'|trans}})}}
                    {{ form_errors(form.dateFinConge)}}
                </label>
            </section>

        </div>
        <div class="row">
            <section class="col col-4">
                <label class="label">statutsConge
                    <h2 class="center-block padding-5 alert alert-warning"> en attente </h2>


                </label>
            </section>


            <section class="col col-4">
                <label class="label">typeConge
                    <a href="#myNewtypeconge" class="open ajouter"  data-toggle="modal"> <i class=" glyphicon glyphicon-plus-sign " style="color: #3cb131"></i></a>
                </label>
                <label class="select">
                    {{ form_widget(form.typeconge ) }}
                    <i></i>
                </label>
            </section>

            <section class="col col-4">
                <label class="label">Employee </label>
                <label class="select">
                    {{ form_widget(form.employe ) }}
                    <i></i>
                </label>
            </section>

        </div>
    </fieldset>



    <fieldset>

    </fieldset>
</div>
<div class="modal-footer">
    {{ form_widget(form._token) }}

    <button type="button" class="btn btn-default"   data-dismiss="modal">
        Annuler
    </button>
    <button type="submit" class="btn btn-primary">
        Ajouter
    </button>
</div>

{{ form_end(form, {'render_rest': false}) }}







