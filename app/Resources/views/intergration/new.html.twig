<div class="modal-header" >
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true"></i><span class="close"></span></button>
    <h2 class="modal-title" id="modal-fa5-label"> Ajouter integration</h2>
</div>
<div class="modal-body">
    {{ form_start(form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('intergration_new'),'method':'POST'|trans}})}}

    <fieldset>
        <div class="row">

            <section class="col col-6">
                <label class="label">Date de demande </label>

                <label class="input"> <i class="icon-append fa fa-calendar"></i>
                    {{ form_widget(form.dateDebut,{'attr':{'class':'startdate'|trans}})}}
                    {{ form_errors(form.dateDebut)}}
                </label>
            </section>
            <section class="col col-6">
                <label class="label">Date Fin </label>

                <label class="input"> <i class="icon-append fa fa-calendar"></i>
                    {{ form_widget(form.dateFin,{'attr':{'class':'startdate'|trans}})}}
                    {{ form_errors(form.dateFin)}}
                </label>
            </section>
            <section class="col col-6">
                <label class="label">Employee </label>
                <label class="select">
                    {{ form_widget(form.employe ) }}
                    <i></i>
                </label>
            </section>
            <section class="col col-6">
                <label class="label">responsable </label>
                <label class="select">
                    {{ form_widget ( form.responsable) }}
                    <i></i>
                </label>
            </section>
        </div>

    </fieldset>



    <fieldset>
        <div class="row">
            <section>
                <label class="label">informations</label>
                <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                    {{ form_widget ( form.informations,{ 'attr': {'type': 'text','name':'informations'|trans } } ) }}
                </label>
            </section>
            <section>
                <label class="label">pointfaible</label>
                <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                    {{ form_widget ( form.pointfaible,{ 'attr': {'type': 'text','name':'pointfaible'|trans } } ) }}
                </label>
            </section>
            <section>
                <label class="label">pointforte</label>
                <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                    {{ form_widget ( form.pointforte,{ 'attr': {'type': 'text','name':'pointforte'|trans } } ) }}
                </label>
            </section>
        </div>

    </fieldset>
</div>
<div class="modal-footer">

    <button type="button" class="btn btn-default"   data-dismiss="modal">
        Annuler
    </button>
    <button type="submit" class="btn btn-primary">
        Ajouter
    </button>
</div>

{{ form_end(form, {'render_rest': false}) }}







