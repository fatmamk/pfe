<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <div class="row">
        <h4 class="modal-title pull-left " id="myModalLabel"><i class="icon-append fa  fa-user"
                                                                style="margin-left: 30px"></i> Ajouter carrière </h4>
        <span id="bdg" class="badge bg-color-red bounceIn animated pull-left "
              style="padding:6px; display: none; margin-left: 15px;"></span>

    </div>
</div>


<div class="modal-body" style=" max-height: 470px; overflow-y: auto;">
    {{ form_start(form,{ 'attr': {'enctype':'multipart/form-data','class': ' checkout-form smart-form','id':'checkout-form','action': path('carriere_new'), 'method': 'POST'|trans }} ) }}

    <div class="panel-group smart-accordion-default" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading " style="background-color: #71843F">
                <h4 class="panel-title txt-color-white"><a data-toggle="collapse" data-parent="#accordion"
                                                           href="#collapseOne">
                        <i class="fa fa-lg fa-angle-down pull-right txt-color-white"></i>
                        <i class="fa fa-lg fa-angle-up pull-right txt-color-white"></i>
                        Création d'un nouveau carriére </a></h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in">
                <div class="panel-body padding-7 ">

                    <section class="col col-10">
                        <label class="label">Employé </label>
                        <label class="select">
                            {{ form_widget ( form.employee) }}
                            <i></i>
                        </label>
                    </section>
                    <section class="col col-6">
                        <label class="label">Date récrutement</label>
                        <label class="input"> <i class="icon-append fa fa-calendar"></i>
                            {{ form_widget(form.dateRecrutement,{'attr':{'class':'date'|trans}}) }}
                            {{ form_widget(form.dateRecrutement) }}
                        </label>
                    </section>
                    <section class="col col-6">
                        <label class="label">Type contrat </label>
                        <label class="select">
                            {{ form_widget ( form.typecontrar) }}
                            <i></i>
                        </label>
                    </section>

                        <section class="col col-6">
                           <div class="input input-file" type="file">
                                <span class="button"><input type="file" id="gestionbundle_carriere_file"
                                                            name="gestionbundle_carriere_file[file]"
                                                            onchange="this.parentNode.nextSibling.value = this.value">Feuilleter</span><input
                                        type="text" placeholder="Fichier contrat" readonly="">
                            </div>
                        </section>
                        <section class="col col-6">
                        <label class="label"> Intégré
                            <label class="toggle " style=" display: inline; ">
                                {{ form_widget(form.integre,{'attr': {'class':'FormateurInterne'|trans}}) }}
                                <i data-swchon-text="oui" data-swchoff-text="non"
                                   style="width:60px;transform: scale(1.1); margin-right: -15px ;"></i>
                            </label>
                        </label>
                        </section>


                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    {{ form_widget(form._token) }}

    <button type="button" class="btn btn-default" data-dismiss="modal">
        Annuler
    </button>
    <button type="submit" class="btn btn-primary">
        Ajouter
    </button>
</div>

{{ form_end(form, {'render_rest': false}) }}










