<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <div class="row">
        <h4 class="modal-title pull-left " id="myModalLabel"><i class="icon-append fa  fa-user"
                                                                style="margin-left: 30px"></i> Ajouter carrière </h4>
        <span id="bdg" class="badge bg-color-red bounceIn animated pull-left "
              style="padding:6px; display: none; margin-left: 15px;"></span>

    </div>
</div>


<div class="modal-body" style=" max-height: 470px; overflow-y: auto;">
    {{ form_start(form,{ 'attr': {'enctype':'multipart/form-data','class': 'smart-form ','action': path('carriere_new'), 'method': 'POST'|trans }} ) }}

    <div class="panel-group smart-accordion-default" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading " style="background-color: #71843F">
                <h4 class="panel-title txt-color-white"><a data-toggle="collapse" data-parent="#accordion"
                                                           href="#collapseOne">
                        <i class="fa fa-lg fa-angle-down pull-right txt-color-white"></i>
                        <i class="fa fa-lg fa-angle-up pull-right txt-color-white"></i>
                        Création d'un nouveau carriére </a></h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in">
                <div class="panel-body padding-7 ">
l

                    <div class="row">

                            <section class="col col-6">
                                <label class="label">Carriere</label>
                                <label class="input"> <i class="icon-append fa fa-tag"></i>
                                    {{ form_widget ( form.libelleCarriere,{ 'attr': {'type': 'text'|trans } } ) }}</label>
                            </section>

                            <section class="col col-6">
                                <label class="label">etat</label>
                                <label class="input"> <i class="icon-append fa fa-tag"></i>
                                    {{ form_widget ( form.etat,{ 'attr': {'type': 'text'|trans } } ) }}</label>
                            </section>

                        <section class="col col-6">
                            <label class="label">Date Recrutement </label>
                            <label class="input"> <i class="icon-append fa fa-calendar"></i>
                                {{ form_widget ( form.dateRecrutement,{ 'attr': { 'class':'date'|trans } } ) }}
                            </label>
                        </section>

                        <section class="col col-6">
                            <label class="label"> employee </label>
                            <label class="select">
                                {{ form_widget ( form.employee ) }}
                                <i></i>
                            </label>
                        </section>
                        <section class="col col-6">
                            <label class="label">type contrat </label>
                            <label class="select">
                                {{ form_widget ( form.typecontrar ) }}
                                <i></i>
                            </label>
                        </section>
                        </div>
                    <div class="row">
                        <section class="col col-4">
                            <label class="label">Fichier Contrat</label>

                            {{ form_widget(form.file,{'attr':{'required':'flase'}})}}
                            {{ form_errors(form.file)}}
                        </section>

                        <section class="col col-4">


                                {{ form_widget ( form.integre)}}


                        </section>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    {{ form_widget(form._token) }}

    <button type="button" class="btn btn-default" data-dismiss="modal">
        Annuler
    </button>
    <button type="submit" class="btn btn-primary">
        Ajouter
    </button>
</div>

{{ form_end(form, {'render_rest': false}) }}










